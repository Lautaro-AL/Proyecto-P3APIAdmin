@model Obligatorio.MVC.Models.AgregarComentarioViewModel

@{
    ViewData["Title"] = "Comentar";
}

<h1>Comentar</h1>

<h4>Agregar estado de seguimiento al envio : @Model.DtoEnvio.EnvioID</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Comentar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@Model.DtoEnvio.EnvioID" asp-for="@Model.DtoComentario.EnvioId"/>
            <textarea asp-for="@Model.DtoComentario.Mensaje"></textarea>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
